@{
    ViewData["Title"] = "Cancel Confirmation";
}
<div class="container mt-5">
    <h2>Booking Cancellation Confirmation</h2>
    <p>Are you sure you want to cancel your booking?</p>

    <form asp-controller="Customer" asp-action="CancelBooking" method="post">
        <input type="hidden" name="bookingId" value="@ViewBag.BookingId" />

        <button type="submit" class="btn btn-danger">Yes, Cancel</button>
        <a asp-controller="Customer" asp-action="MyBookings"  class="btn btn-secondary">No, Go Back</a>
    </form>
</div>
