@{
    ViewData["Title"] = "Successful Booking";
}
<div class="container mt-5">
    <div class="card p-4">
        <h1 class="text-center mb-4">Booking Successful</h1>
        <h1 class="text-center">Amount Paid: $@ViewBag.Booking.Amount</h1>

        <div class="text-center mt-4">
            <a href="@Url.Action("Details", "Customer", new { bookingId = ViewBag.Booking.Id })" class="btn btn-info btn-lg">
                Show Booking Details
            </a>
        </div>
    </div>
</div>
