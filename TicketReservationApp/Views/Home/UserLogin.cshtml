@{
    ViewData["Title"] = "User Login";
}
@model TicketReservation.App.Models.LoginViewModel
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center">Login</h1>
                </div>
                <div class="card-body">

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                    }

                    <form asp-controller="Home" asp-action="UserLogin" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Username">Username</label>
                            <input asp-for="Username" class="form-control" placeholder="Your Username">
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Your Password" />
                            <span asp-validation-for="Password" class="text-danger"/>
                        </div>
                        <button class="btn btn-success btn-block mt-3" type="submit">Login</button>

                    </form>
                    <div class="mt-3">
                        <a href="/Home/SignUpView">Not have a Account ? Create New Account</a>
                    </div>
                    <div class="mt-3 ms auto">
                        <a href="/Home/ForgetPasswordView">Forgot Password ?</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}