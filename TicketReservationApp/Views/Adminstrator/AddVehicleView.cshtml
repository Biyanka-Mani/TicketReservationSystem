@model TicketReservation.App.Models.VechicleViewModel;
@{
     ViewData["Title"] = "Add Vehicle";
   
}

<h1>Add Vehicle</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="AddVehicle" asp-controller="Adminstrator" autocomplete="off" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="VehicleName" class="control-label"></label>
                <input asp-for="VehicleName" class="form-control" />
                <span asp-validation-for="VehicleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success mt-3">Add Vehicle</button>
                <a href="@Url.Action("VehiclesView", "Adminstrator")" class="btn btn-secondary mt-3">Go Back</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
